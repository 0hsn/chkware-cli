---
version: default:testcase:0.7.2

request:
  url: https://pokeapi.co/api/v2/berry
  method: GET

spec:
  asserts:
    - {type: AssertEqual, actual: $_response.code, expected: 200}
    - { type: AssertMapHasKeys, actual: $_response.body, expected: ['count', 'next', 'previous', 'results'] }
    - {type: AssertIsList, actual: $_response.body.results}
    - type: AssertCount
      actual: $_response.body.results
      expected: 20

expose:
  - $_assertion_results
  - $_response
