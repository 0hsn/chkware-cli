---
version: default:testcase:0.7.2

variables:
  URL: https://pokeapi.co/api/v2/berry/1

request:
  url: "{$URL}"
  method: GET

spec:
  asserts:
    - {type: AssertEqual, actual: $_response.code, expected: 200}
    - type: AssertMapExactKeys
      actual: $_response.body
      expected:
        - firmness
        - flavors
        - growth_time
        - id
        - item
        - max_harvest
        - name
        - natural_gift_power
        - natural_gift_type
        - size
        - smoothness
        - soil_dryness
